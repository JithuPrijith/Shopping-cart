<section>
    <div class="container">
        <div class="">
            <h2 class="text-center">
                Our <span>products</span>
            </h2>
        </div>
        <div class="row bg-info mt-5">
            {{#each products}}

            <div class="col-3">
                <div class="card p-3 h-100">
                    <img src="/product-images/{{this._id}}.png" class="mx-auto" alt="..."
                        style="width: 11rem; height: 10rem;">
                    <div class="card-body">
                        <h6 class="card-title">{{this.name}}</h6>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text">Price : $</span> {{this.price}}</p>
                        <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</button>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</section>
<script>
    function addToCart(productId){
        $.ajax({
            url : '/add-to-cart/'+productId,
            method : 'get',
            success : (response) => {
                 console.log(response.products)
                if(response.products){
                    let count = $('#cart-count').html()
                    count = parseInt(count) + 1
                    $('#cart-count').html(count)
                }
            }
        })
    }
</script>